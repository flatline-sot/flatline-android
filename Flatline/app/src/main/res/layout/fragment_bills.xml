<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="nz.flatline.flatline.BillsFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/bills_recycler_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/flatline_pale_brown"/>

    <Button
        android:id="@+id/connect_with_powershop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="Connect with Powershop"/>


</FrameLayout>
